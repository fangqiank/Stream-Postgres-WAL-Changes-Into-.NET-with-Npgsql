    "EnableDeadLetterQueue": true,
    "DeadLetterQueueTable": "cdc_dead_letter_events",
    "LogAllEvents": false,
    "PerformanceMonitoringInterval": 60,
    "EnableEventSerialization": false,
    "EventSerializationDirectory": "cdc_events",
    "EnableDataValidation": true,
    "EventFilters": {
      "ExcludedTables": [],
