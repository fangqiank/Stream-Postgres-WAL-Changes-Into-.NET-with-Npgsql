{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Stream_Postgres_WAL_Changes_Into_.NET_with_Npgsql_App.Services.LogicalReplicationService": "Information",
      "Stream_Postgres_WAL_Changes_Into_.NET_with_Npgsql_App.Services.ReplicationHealthMonitor": "Information",
